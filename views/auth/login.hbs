<h1 class="title">Login</h1>



<form action="/auth/login" method="POST">

   <div id="login">

         <div id="emailLogin">
            <label class="labelLoginSize">Email
               <input class="emailLogin" type="email" name="email">
            </label>
         </div>

         <div id="passwordLogin">
            <label class="labelLoginSize">Password
               <input class="passwordLogin" type="password" name="password">
            </label>
         </div>

         <button class="btnLogin" type="submit">Submit</button>

   </div>

</form>

{{#if errorMessage}}
{{errorMessage}}
{{/if}}