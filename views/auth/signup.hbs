<form action="/auth/signup" method="POST">
   <label> Pseudonyme
      <input type="text" name="pseudonyme">
   </label>
   <label> Email
      <input type="email" name="email">
   </label>
   <label> Password
      <input type="password" name="password">
   </label>
   <a href="#">
