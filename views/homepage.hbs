<div class="homepage">
    <h2>Choix de votre destination</h2>
    <form action="/results" method="GET">
        <label>Planète de départ :</label>
        <select name="from">
            {{#each planets}}
            <option value="{{_id}}" name="from">{{name}}</option>
            {{/each}}
        </select>

        <label for="from">Planète de destination :</label>
        <select name="to">
            {{#each planets}}
            <option value="{{_id}}" name="to">{{name}}</option>
            {{/each}}
        </select>
        <button>Go Voyage !</button>
    </form>
