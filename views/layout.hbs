<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <nav>
    <div id="navMin">
      <a href="/"><img src="https://res.cloudinary.com/shalltear/image/upload/v1658785932/Project%202/public/Logo2_uusmkb.png"
        id="navLogo"></a>
      

      <div id="navCartHamburger">
        {{#if user}}
          {{#if user.avatarUrl}}
            <a href="/auth/profile"><img src="{{user.avatarUrl}}" class="navIcon"></a>
          {{else}}
            <a href="/auth/profile"><img
              src="https://res.cloudinary.com/shalltear/image/upload/v1658785651/Project%202/public/defaultAvatar_ezlpxu.png"
              class="navIcon"></a>
          {{/if}}
        {{/if}}
        <a href="/cart"><img src="https://res.cloudinary.com/shalltear/image/upload/v1658592888/Project%202/public/cart_gzmrmy.png"
          class="navIcon"></a>
        <img src="https://res.cloudinary.com/shalltear/image/upload/v1658593774/Project%202/public/hamburger_ippbcd.png"
          class="navIcon" id="hamburger">
      </div>
    </div>
    <div id="navMax">
      {{> hamburger}}
    </div>
  </nav>

  <div id="content">
    {{{body}}}
  </div>


  <footer>
    <ul>
      <li><a href="/application">Application</a></li>
      <li><a href="/classes">Classes de voyage</a></li>
      <li><p>© Star Stonks - Toutes droites reservés</p></li>
    </ul>
  </footer>

  <script src="/js/hamburger.js"></script>
</body>

</html>